@model JanumikaPro.Models.Order

@{ ViewData["Title"] = "Index"; }

<h1>Items In Order</h1>

@{ 
    List<CartItem> CI = Model.Cart.Items.ToList();
}

<table class="table">
    <thead>
        <tr>


            <th>
                Item Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Total Price
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in CI)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Return to Home</a>
            </td>
        </tr>}
    </tbody>
</table>